<controls:CustomWindow
    x:Class="AgileIM.Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:AgileIM.Client.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AgileIM.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="950"
    Height="600"
    MinWidth="950"
    MinHeight="600"
    CaptionHeight="45"
    FontFamily="微软雅黑"
    Style="{StaticResource BaseWindowsStyle}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="1"
                Background="#F3F3F3F3"
                ZIndex="0">
                <ListBox
                    Margin="0,10,0,0"
                    SelectedIndex="0"
                    Style="{StaticResource MenuListBoxStyle}">
                    <ListBoxItem>
                        <Grid>
                            <Path
                                Width="25"
                                Height="25"
                                Data="{StaticResource Forum}"
                                Fill="Gray"
                                Stretch="Uniform" />
                        </Grid>
                    </ListBoxItem>
                    <ListBoxItem>
                        <Border>
                            <Grid>
                                <Path
                                    Width="25"
                                    Height="25"
                                    Data="{StaticResource Account-Multiple}"
                                    Fill="Gray"
                                    Stretch="Uniform" />
                            </Grid>
                        </Border>
                    </ListBoxItem>
                </ListBox>
            </Grid>

            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Background="#FAFAFA">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0">
                        <Border
                            Width="250"
                            Margin="15,15,10,15"
                            Background="#ffff"
                            CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Opacity=".2"
                                    ShadowDepth="1"
                                    Color="Gray" />
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Height="45" Margin="15,25">
                                    <Grid VerticalAlignment="Top">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="聊天" />
                                        <Button
                                            Width="80"
                                            Height="35"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="#1E90FF"
                                            BorderThickness="0"
                                            Content="新建"
                                            FontSize="16"
                                            Foreground="White" />
                                    </Grid>
                                    <Border
                                        Height="1"
                                        Margin="0,10,0,0"
                                        VerticalAlignment="Bottom"
                                        Background="Gray"
                                        Opacity=".2" />
                                </Grid>
                                <Grid Grid.Row="1">
                                    <ListBox
                                        ItemsSource="{Binding ChatUserList}"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Style="{StaticResource ContactsListBoxStyle}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid Height="30" Margin="25">
                                <TextBlock FontSize="18" Text="自然醒123" />
                                <Border
                                    Height="1"
                                    Margin="0,10,0,0"
                                    VerticalAlignment="Bottom"
                                    Background="Gray"
                                    Opacity=".2" />
                                <Button
                                    Width="30"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent">
                                    <Path
                                        Width="15"
                                        Height="20"
                                        Data="{StaticResource More}"
                                        Fill="{DynamicResource PrimaryForegroundBrush}"
                                        Stretch="Uniform" />
                                </Button>
                            </Grid>
                            <Grid Grid.Row="1" Margin="0,-22,0,0">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl>
                                        <controls:ChatMessage Text="你好！！！" />
                                        <controls:ChatMessage Text="你好！！！" />
                                        <controls:ChatMessage Text="你好！！！" />
                                        <controls:ChatMessage Text="很不错的是大飒飒的和萨达萨达是阿达萨达萨达大苏打实打实的很不错的是大飒飒的和萨达萨达是阿达萨达萨达大苏打实打实的" />
                                        <controls:ChatMessage IsSelf="True" Text="很不错的是大飒飒的和萨达萨达是阿达萨达萨达大苏打实打实的很不错的是大飒飒的和萨达萨达是阿达萨达萨达大苏打实打实的" />
                                        <controls:ChatMessage Text="你好！！！" />
                                        <controls:ChatMessage IsSelf="True" Text="很不错的是大飒飒的和萨达萨达是阿达萨达萨达大苏打实打实的" />
                                        <controls:ChatMessage IsSelf="True" Text="很不错的是大飒飒的和萨达萨达是阿达萨达萨达大苏打实打实的" />
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1" Row="1">
                        <Border
                            Height="150"
                            Margin="10,10,15,15"
                            Background="#ffff"
                            CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Opacity=".2"
                                    ShadowDepth="1"
                                    Color="Gray" />
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Height="30" Margin="10,0">
                                    <Border
                                        Height="1"
                                        VerticalAlignment="Bottom"
                                        Background="Gray"
                                        Opacity=".2" />
                                    <WrapPanel>
                                        <WrapPanel.Resources>
                                            <Style BasedOn="{StaticResource BaseButtonStyle}" TargetType="Button">
                                                <Setter Property="Width" Value="30" />
                                                <Setter Property="Height" Value="30" />
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Width" Value="15" />
                                                <Setter Property="Height" Value="15" />
                                                <Setter Property="Opacity" Value=".7" />
                                                <Setter Property="Stretch" Value="UniformToFill" />
                                                <Setter Property="Fill" Value="{DynamicResource PrimaryForegroundBrush}" />
                                            </Style>
                                        </WrapPanel.Resources>
                                        <Button>
                                            <Path Data="{StaticResource Emoticon-Outline}" />
                                        </Button>
                                        <Button>
                                            <Path Data="{StaticResource Content-Cut}" />
                                        </Button>
                                        <Button>
                                            <Path Width="17" Data="{StaticResource Chat-Processing}" />
                                        </Button>
                                    </WrapPanel>
                                </Grid>
                                <TextBox
                                    Grid.Row="1"
                                    Margin="10,0"
                                    VerticalContentAlignment="Stretch"
                                    BorderThickness="0"
                                    FontSize="14"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Style="{x:Null}"
                                    TextWrapping="Wrap" />
                                <Grid
                                    Grid.Row="2"
                                    Height="35"
                                    Margin="10">
                                    <Button
                                        Width="80"
                                        Height="35"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Background="#1E90FF"
                                        BorderThickness="0"
                                        Content="发送"
                                        FontSize="16"
                                        Foreground="White" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</controls:CustomWindow>
