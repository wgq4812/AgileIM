<UserControl
    x:Class="AgileIM.Client.Views.AddNewFriendView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assist="clr-namespace:AgileIM.Client.Themes.Assist"
    xmlns:controls="clr-namespace:AgileIM.Client.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AgileIM.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="550"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox Padding="2" assist:ControlAssist.Hint="Account / Phone / Nick" />
            <Button
                Grid.Column="1"
                Width="60"
                Margin="5,0,0,0"
                Content="搜索" />
        </Grid>
        <controls:ItemsControlEx Grid.Row="1" DefaultPageSource="../Images/defaultpage1.png" />
    </Grid>
</UserControl>
